
<div class="container-fluid">
<!-- Articles Added Modal -->
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Scraping Completed</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="numAdded">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary close" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

{{!-- New Note Modal --}}
<div class="modal fade" id="newNoteModal" tabindex="-1" aria-labelledby="newNoteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newNoteLabel">New Note</h5>
                <button type="button" class="closeNewNote" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="newNote" class="col-form-label">Note:</label>
                        <textarea class="form-control" id="newNote"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary closeNewNote" data-dismiss="modal">Cancel</button>
                <button id="saveNote" type="button" class="btn btn-primary">Save!</button>
            </div>
        </div>
    </div>
</div>

<div class="row" style="height: 100vh">
    <div class="col-md-8" style="height: 100%; overflow-y: scroll;">
        <h2 class="text-center">NBC News headlines</h2>
        {{#each articles}}

        <div class="card mb-3">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-10 card-title">
                        <a href="{{link}}" target="_blank"><h3>{{title}}</h3></a>
                    </div>
                    <div class="col-md-2">
                        {{articleDate}}
                        <button type="button" class="btn btn-sm btn-secondary see-note mb-1" data-id="{{_id}}" data-num-notes="{{noteCount notes}}">{{noteCount notes}} Notes</button>
                        <button type="button" class="btn btn-sm btn-secondary add-note" data-id="{{_id}}">Add Note</button>
                   
                    </div>
                </div>
            </div>
            <div class="card-body">
                <p class="card-text" data-id="{{_id}}">{{desc}}</p>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="col-md-4" id="noteColumn" style="height: 100%; overflow-y: scroll;">
        <h2 class="text-center">Notes</h2>
            <div id="noteContainer">

            </div>
    </div>
</div>
</div>

